<ul class="list-unstyled">
  <% favorites.each do |favorite| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(favorite.micropost.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to favorite.micropost.user.name, user_path(favorite.micropost.user) %> <span class="text-muted">posted at <%= favorite.created_at %></span>
        </div>
        <div>
          <p><%= favorite.micropost.content %></p>
        </div>
        <div class="btn-group">
          <div>
          <% if current_user == favorite.micropost.user %>
            <%= link_to "Delete", favorite, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm mx-1' %>
          <% end %>
          </div>
          <div>
            <%= render 'favorites/favorite_button', micropost: favorite.micropost %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate favorites %>
</ul>